{
  "compilerOptions": {
    // Features
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2015",
    // Bundler
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "jsx": "preserve",
    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "types": ["@revenge-mod/types", "react-native/types/index"]
  }
}
